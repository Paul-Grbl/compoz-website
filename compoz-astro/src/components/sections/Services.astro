---
import SectionTitle from "../ui/SectionTitle.astro";
import ServiceCard from "../ui/ServiceCard.astro";
import Section from "./Section.astro";

import c1 from "../../assets/pics/services-mobile.png";
import c2 from "../../assets/pics/card-pic2.png";
import c3 from "../../assets/pics/services-linux.png";
import c4 from "../../assets/pics/services-desktop.png";

const cards = [
  {
    index: 1,
    titleTop: "Applications mobiles",
    titleBottom: "iOS & Android",
    description:
      "Une seule base de code pour toucher 100% de vos utilisateurs sur iPhone et Android. Performance native, coûts maîtrisés.",
    img: c1,
    alt: "Développement d'applications mobiles iOS et Android avec Flutter",
    link: "/#contact",
    stack: "Flutter · Dart",
  },
  {
    index: 2,
    titleTop: "Applications web",
    titleBottom: "fullstack & responsives",
    description:
      "Des applications web robustes et accessibles depuis n'importe quel navigateur. Interface intuitive, backend fiable, déploiement simplifié.",
    img: c2,
    alt: "Développement d'applications web fullstack responsives",
    link: "/#contact",
    stack: "React · Directus · Django",
  },
  {
    index: 3,
    titleTop: "Systèmes embarqués",
    titleBottom: "IHM · Linux · Raspberry Pi",
    description:
      "Des interfaces tactiles et des services embarqués pour vos produits connectés. Communication bas niveau, fiabilité industrielle.",
    img: c3,
    alt: "Développement d'interfaces embarquées sur Raspberry Pi et Linux",
    link: "/#contact",
    stack: "Flutter · C · Python · MQTT",
  },
  {
    index: 1,
    titleTop: "Applications desktop",
    titleBottom: "macOS · Linux · Windows",
    description:
      "Des logiciels natifs multiplateformes pour vos outils métier internes ou vos produits commerciaux.",
    img: c4,
    alt: "Développement d'applications desktop multiplateformes",
    link: "/#contact",
    stack: "Flutter · Dart · Python",
  },
];

const description =
  "Du prototype à la mise en production, je développe la solution technique adaptée à votre métier";
---

<Section id="services">
  <div class="mt-20 mb-5">
    <SectionTitle
      sectionTitle="Ce que je développe pour vous"
      description={description}
    />
    <div class="grid md:grid-cols-2 md:grid-rows-2 gap-10">
      {
        cards.map((card) => (
          <ServiceCard
            index={card.index}
            titleTop={card.titleTop}
            titleBottom={card.titleBottom}
            description={card.description}
            img={card.img}
            alt={card.alt}
            link={card.link}
            stack={card.stack}
          />
        ))
      }
    </div>
  </div>
</Section>
